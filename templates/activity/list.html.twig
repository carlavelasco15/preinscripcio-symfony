{% extends 'base.html.twig' %}

{% block title %}Llista d'activitats {{ parent() }}{% endblock %}

{% block breadcrumbs %}
    {{ parent() }}
    <li class="breadcrumb-item active">Activitats</li>
{% endblock %}

{% block main %}
    {{ parent() }}

    <div class="table-responsive overflow-hidden p-1">
           
        <h4 class="border-bottom py-2 mb-4">Llista d'activitats</h4>
        
    <div class="row align-items-end justify-content-between">
        <div class="col-3">
            <a href="{{ path('activity_create') }}" id="scroll-up" class="btn btn-primary align-items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="ionicon" viewBox="0 0 512 512">
                    <title>Crear activitat</title>
                    <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="44" d="M256 112v288M400 256H112"/>
                </svg>
                CREAR ACTIVITAT
            </a>
        </div>


        <div class="col-7">
                {% include 'includes/search.html.twig' %}
        </div>
    </div>


    <div class="text-end">
        <a href="{{ path('activity_forget_search') }}">Eliminar filtres</a>
    </div>

    {% include 'includes/activity_list.html.twig' %}


    {%
        include 'includes/paginator.html.twig' with {
            'route' : 'activity_list',
            'entidades' : 'activitats'
        }
    %}
            
    <script type="text/javascript" src="/js/activity_list.js"></script>
                        
{% endblock %}
